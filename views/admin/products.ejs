<%- include('../includes/head.ejs') %>
    
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <h1>
                    NS
                    <span class="highlight">Books</span>
                    <br />
                    <span class="highlight">BYNS</span>
                  </h1><br>        
                <% if (prods.length > 0) { %>
                    <div class="grid">
                        <% for (let product of prods) { %>
                            <article class="card product-item">
                                <header class="card__header">
                                    <h1 class="product__title">
                                        <%= product.title %>
                                    </h1>
                                </header>
                              
                                <div class="card__content">
                                    <p class="product__description">
                                        <%= product.description %>
                                    </p>
                                </div>
                                <div class="card__actions">
                                    <a href="/admin/edit-product/<%= product._id %>?edit=true" class="btn">Edit</a>
                                    <input type="hidden" value="<%= product._id %>" name="productId">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <button class="btn" type="button" onclick="deleteProduct(this)">Delete</button>
                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Books Found!</h1>
                        <% } %>
                        <h6> <span class="highlight">Note : </span>  </h6>
                        <div class="note"> I dont own these.I am not authorized seller of these books.This website was created for project purpose. <br>
                        Contact - <a href="mailto: nikhilsinghns01@gmail.com"> Nikhil Singh</a>
                    </div>
            </main>
            <%- include('../includes/end.ejs') %>
            <script src="/js/admin.js"></script>